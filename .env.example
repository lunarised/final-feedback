# Server Configuration
HOST=127.0.0.1
PORT=8080

# Database
DATABASE_PATH=feedback.db

# Admin Panel Password (CHANGE THIS IN PRODUCTION!)
# When accessing /admin/panel, use any username with this password
ADMIN_PASSWORD=admin123

# Rate Limiting
# Soft limit: 1 submission per 30 minutes per device (cookie-based)
# Hard limit: Maximum submissions per IP address per hour (default: 10)
# This allows multiple people on the same network to submit feedback,
# while preventing spam from a single IP
IP_RATE_LIMIT_MAX=10

# Player Configuration
# Customize these to match your character
# Note: Values with spaces must be wrapped in quotes
PLAYER_NAME="Your Character"
PLAYER_SERVER=Server
PLAYER_DATACENTER=Datacenter

# Image Configuration (optional)
# Paths to banner and profile images
# Defaults to /assets/banner.webp and /assets/profile.webp
# Can use relative paths like /assets/custom.png or external URLs
BANNER_IMAGE=/assets/banner.webp
PROFILE_IMAGE=/assets/profile.webp

# Tagline (optional)
# Customizable subtitle on the feedback form
TAGLINE="Ran content with me? Let me know how I did!"

# Discord Webhook (optional)
# Get this from Discord: Server Settings > Integrations > Webhooks > New Webhook
# Leave empty to disable notifications
DISCORD_WEBHOOK_URL=
